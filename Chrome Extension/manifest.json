{
    "manifest_version": 3,
    "name": "Weather Extension",
    "version": "1.0",
    "description": "A chrome extension that displays the current weather conditions.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "A popup appears here."
    }
  }
  